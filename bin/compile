#!/usr/bin/env bash

# Ensure wildcards in globs match dotfiles too.
shopt -s dotglob

indent() {
    sed -u 's/^/      /'
}

BUILD_DIR="$1"
CACHE_DIR="$2"
ENV_DIR="$3"

export PATH="$BUILD_DIR/.heroku/node/bin:$BUILD_DIR/.heroku/yarn/bin":$PATH

# $SOURCE_VERSION gets set by heroku.
# Make sure to have these envs:
# SENTRY_AUTH_TOKEN
# SENTRY_ORG
# SENTRY_PROJECT

DIR=$(cd "$ENV_DIR/" && pwd)
export SENTRY_AUTH_TOKEN="$(cat "${DIR}/${SENTRY_AUTH_TOKEN}")"

echo "Installing sentry" | indent

npm install -g @sentry/cli

VERSION=`sentry-cli releases propose-version`
echo $VERSION

echo "Creating release in sentry" | indent

sentry-cli releases new -p $SENTRY_PROJECT --org $SENTRY_ORG $VERSION

sentry-cli releases set-commits "$VERSION" --auto

sentry-cli releases finalize $VERSION

echo "Done creating release" | indent
